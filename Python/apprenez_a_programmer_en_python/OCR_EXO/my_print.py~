# -*- coding:utf-8 -*-

def afficher(*parametres, sep=" ", fin='\n'):

    parametres = list(parametres)

    chaine = sep.join(parametres)
    chaine += fin
        
    print(parametres, end='')

chaine = str(input("Veuillez entrer le nombre paramÃªtres que vous voulez afficher\n"))
",".join(chaine)
afficher(chaine)
