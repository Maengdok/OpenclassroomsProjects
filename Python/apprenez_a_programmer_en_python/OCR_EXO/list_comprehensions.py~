inventaire = [
    ("pommes", 22),
    ("melons", 4),
    ("poires", 18),
    ("fraises", 76),
    ("prunes", 51),
    ]

soust_qt = 7

list_rev = [(nb_fruits, nom) for nom, nb_fruits in inventaire]
inventaire = [(nom, nb_fruits) for nb_fruits, nom in sorted(list_rev, reverse = True)]
print(inventaire)
